{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDb": {
    "ConnectionString": "mongodb://localhost:27017/", 
    "DatabaseName": "taskmanagement",
    "ProjectsCollection": "projects",
    "TasksCollection": "tasks"
  },
  "Redis": {
    "ConnectionString": "redis:6379",
    "DefaultExpirationMinutes": 30
  },
  "Supabase": {
    "Url": "",
    "AnonKey": "",
    "JwtSecret": "",
    "Note": "⚠️ These are empty by default. Set via environment variables (Railway/Docker) or user-secrets (local dev)."
  },
  "OpenTelemetry": {
    "ServiceName": "TaskManagement.API",
    "ServiceVersion": "1.0.0",
    "UseConsoleExporter": true,
    "OtlpEndpoint": "",
    "Note": "Set OtlpEndpoint to send traces to Jaeger (http://localhost:4317), Zipkin, or other OTLP collectors"
  }
